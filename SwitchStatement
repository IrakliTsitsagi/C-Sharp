namespace SwitchStatement
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Are You Gay? (Yes or No)");
            String input = Console.ReadLine();

            switch (input)
            {
                case "Yes": Console.WriteLine("Why Are You Gay?"); break;
                case "No": Console.WriteLine("Then Who Is Gay?"); break;
                default: Console.WriteLine("rai bijoo?"); break;

            }

        }
    }
}
